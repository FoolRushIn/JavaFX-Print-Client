<?import javafx.scene.text.Text?>

<VBox fx:id="vBoxToDrag" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.printclient.controller.TopViewController">
    <children>
        <HBox fx:id="hBoxForDoubleClick" alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="827.0" styleClass="root"
              stylesheets="@../../static/css/top_control_css.css">
            <children>
                <ImageView fitHeight="42.0" fitWidth="63.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../static/icon/white/headphones@3x.png"/>
                    </image>
                    <HBox.margin>
                        <Insets bottom="0.2" left="2.0" right="1.0" top="0.2"/>
                    </HBox.margin>
                </ImageView>
                <Text fill="#ffffff" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="及时打印客户端"
                      textAlignment="CENTER" wrappingWidth="118.91964721679688">
                    <font>
                        <Font name="Microsoft YaHei Light" size="14.0"/>
                    </font>
                </Text>
                <Region prefHeight="42.0" prefWidth="94.0" HBox.hgrow="ALWAYS"/>
                <JFXSpinner fx:id="spinnerSearch" prefHeight="42.0" prefWidth="44.0" visible="false"/>
                <JFXTextField fx:id="tfSearchKeyword" alignment="CENTER" focusColor="#5b8f8d00" labelFloat="true"
                              prefHeight="30.0" prefWidth="272.0"
                              style="-fx-background-color: #e5e5e5; -fx-border-radius: 20 0 0 20; -fx-background-radius: 20 0 0 20; -fx-fill: black;"
                              text="浮夸" unFocusColor="#ffffff00">
                    <font>
                        <Font name="Microsoft YaHei" size="15.0"/>
                    </font>
                    <HBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </HBox.margin>
                </JFXTextField>
                <JFXButton fx:id="btnSearch" prefHeight="30.0" prefWidth="73.0"
                           style="-fx-border-color: white; -fx-border-width: 0.5 0.5 0.5 0; -fx-border-radius: 0 20 20 0;"
                           text="Search" textFill="#b90606">
                    <HBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="Microsoft YaHei Bold" size="12.0"/>
                    </font>
                </JFXButton>
                <Region prefHeight="50.0" prefWidth="163.0" HBox.hgrow="ALWAYS"/>
                <JFXButton fx:id="btnSetting" mnemonicParsing="false" styleClass="minBtn" text="">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="GEAR" opacity="0.48" size="1.5em"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="btnMin" mnemonicParsing="false" styleClass="minBtn" text="">
                    <graphic>
                        <MaterialDesignIconView fill="WHITE" glyphName="MINUS" size="1em"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="btnClose" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" styleClass="closeBtn"
                           text="">
                    <graphic>
                        <MaterialDesignIconView fill="WHITE" glyphName="WINDOW_CLOSE" size="1em"/>
                    </graphic>
                </JFXButton>
            </children>
        </HBox>
    </children>
</VBox>
