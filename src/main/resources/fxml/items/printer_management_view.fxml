<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import com.jfoenix.controls.JFXButton?>
<BorderPane fx:id="printer_management_pane" prefHeight="442.0" prefWidth="595.0"
            stylesheets="@../../static/css/table_view_css.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.javafx.printclient.controller.PrinterManagementController">
    <center>
        <AnchorPane cache="true" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #cfcfcf;"
                    BorderPane.alignment="CENTER">
            <Pagination fx:id="pagination" pageCount="20" prefWidth="595.0"
                        style="-fx-border-color: gray; -fx-border-width: 0.2 0 0 0; -fx-background-color: transparent;"
                        stylesheets="@../../static/css/pagination_css.css" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <padding>
                    <Insets bottom="-3.0"/>
                </padding>
            </Pagination>
            <TableView fx:id="tableView" cache="true" cacheHint="SPEED" editable="true"
                       style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="43.0"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <columns>
                    <TableColumn fx:id="tColumn_serial" maxWidth="70" minWidth="70" sortable="false"
                                 styleClass="firstColumn" text="序号"/>
                    <TableColumn fx:id="tColumn_printer_registered" minWidth="200" sortable="false"
                                 styleClass="firstColumn" text="注册打印机"/>
                    <TableColumn fx:id="tColumn_printer_system" minWidth="120" sortable="false" styleClass="firstColumn"
                                 text="系统打印机"/>
                    <TableColumn fx:id="tColumn_printer_inuse" minWidth="80" sortable="false" styleClass="firstColumn"
                                 text="是否使用"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </AnchorPane>
    </center>
    <top>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <JFXButton fx:id="insertButton" mnemonicParsing="false" text="新增"/>
                <JFXButton fx:id="cancelButton" mnemonicParsing="false" text="取消"/>
            </buttons>
        </ButtonBar>
    </top>
</BorderPane>
